<Page x:Class="Practice8.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация"
      Background="AntiqueWhite">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Логин:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="1" Margin="100,0,0,0"/>

        <TextBlock Text="Пароль:" Grid.Row="2" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Margin="100,0,0,0"/>

        <TextBlock Text="Повторите пароль:" Grid.Row="3" VerticalAlignment="Center"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="3" Margin="100,0,0,0"/>

        <Button Content="Зарегистрироваться" Grid.Row="4" Width="150" Margin="0,10,0,0" Click="RegisterButton_Click"/>

        <TextBlock x:Name="ErrorTextBlock" Grid.Row="5" Foreground="Red" Margin="0,10,0,0"/>
    </Grid>
</Page>